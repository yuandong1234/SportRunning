<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_target_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="87dp"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:text="10.00"
                        android:textColor="#3F3F3F"
                        android:textSize="60sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_target_distance"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@+id/tv_target_distance"
                        android:includeFontPadding="false"
                        android:text="KM"
                        android:textColor="#3F3F3F"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv_my_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_target_distance"
                        android:layout_alignLeft="@+id/tv_target_distance"
                        android:includeFontPadding="false"
                        android:text="我的里程"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_running_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_my_distance"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:includeFontPadding="false"
                        android:text="2020.06.03"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="50dp"
                        android:layout_marginRight="16dp"
                        android:text="秋大王"
                        android:textColor="#3F3F3F"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view_running_line"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_below="@+id/tv_my_distance"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_sport_gradient" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_running_line"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@mipmap/icon_running_speed" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:includeFontPadding="false"
                                    android:text="5′33″"
                                    android:textColor="#3f3f3f"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="平均配速"
                                    android:textColor="#666666"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <View
                                android:layout_width="1px"
                                android:layout_height="32dp"
                                android:layout_gravity="center_vertical"
                                android:background="#dcdcdc" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@mipmap/icon_running_time" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:includeFontPadding="false"
                                    android:text="00:18:48"
                                    android:textColor="#3f3f3f"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="时长"
                                    android:textColor="#666666"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <View
                                android:layout_width="1px"
                                android:layout_height="32dp"
                                android:layout_gravity="center_vertical"
                                android:background="#dcdcdc" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@mipmap/icon_running_calorie" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:includeFontPadding="false"
                                    android:text="270.8"
                                    android:textColor="#3f3f3f"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="千卡"
                                    android:textColor="#666666"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="16dp"
                            android:background="#dcdcdc" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@mipmap/icon_running_step_number" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:includeFontPadding="false"
                                    android:text="(cm)"
                                    android:textColor="#3f3f3f"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="步数"
                                    android:textColor="#666666"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <View
                                android:layout_width="1px"
                                android:layout_height="32dp"
                                android:layout_gravity="center_vertical"
                                android:background="#dcdcdc" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@mipmap/icon_running_frequency" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:includeFontPadding="false"
                                    android:text="00:18:48"
                                    android:textColor="#3f3f3f"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="平均步频(步/min)"
                                    android:textColor="#666666"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <View
                                android:layout_width="1px"
                                android:layout_height="32dp"
                                android:layout_gravity="center_vertical"
                                android:background="#dcdcdc" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@mipmap/icon_running_stride" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:includeFontPadding="false"
                                    android:text="00:18:48"
                                    android:textColor="#3f3f3f"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="平均步幅(cm)"
                                    android:textColor="#666666"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/btn_sport_share"
                            android:gravity="center"
                            android:text="分享战绩"
                            android:textColor="#ffffff"
                            android:textSize="16sp" />

                    </LinearLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <ImageView
                android:layout_width="65dp"
                android:layout_height="115dp"
                android:layout_marginLeft="16dp"
                android:elevation="5dp"
                android:src="@mipmap/icon_running_certificate_medal_s" />

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:elevation="5dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/icon_running_kaisa_21" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="bottom|right" />
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>